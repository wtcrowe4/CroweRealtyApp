<?xml version="1.0" encoding="UTF-8" ?>
<TabbedPage
    x:Class="CroweRealtyApp.Pages.TabPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:local="clr-namespace:CroweRealtyApp.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    android:TabbedPage.ToolbarPlacement="Bottom"
    SelectedTabColor="#1d94ab"
    UnselectedTabColor="#78909c"
    mc:Ignorable="d">

    <NavigationPage
        Title="Home"
        BarBackgroundColor="#1d94ab"
        BarTextColor="White"
        IconImageSource="home_icon">
        <x:Arguments>
            <local:HomePage />
        </x:Arguments>
    </NavigationPage>
    <local:BookmarksPage Title="Saved" IconImageSource="bookmark_icon" />
    <local:SettingsPage Title="Settings" IconImageSource="settings_icon" />



</TabbedPage>
